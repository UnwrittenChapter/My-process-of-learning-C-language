#define _CRT_SECURE_NO_WARNINGS 1
#include <stdio.h>
#include <string.h>
int main()
{
	char password[9] = {0};
	    printf("请输入您的密码：");
	scanf("%8s", password);
	int ch = 0;

	while ((ch = getchar()) != '\n' && ch != EOF)
	{
		;

	}
	    printf("请确认您的代码(Y/N): ");

		int comfirm = getchar();
	if ( comfirm == 'Y'|| comfirm == 'y')
	{
		printf("输入成功\n");
	}

	else
	{
		printf("输入失败\n");

	}

	return 0;
}
